<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="6.0dip" >

    <FrameLayout
        style="@style/Category.App.ListView.Item.Layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/category_top_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="5.0dip"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/adapter_category_top_banner_iv"
                style="@style/Category.App.ListView.Item.Banner"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:contentDescription="@string/imageview_content_description"
                android:scaleType="fitXY"
                android:src="@drawable/default_banner" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3.0dip"
                android:layout_marginTop="6.0dip" >

                <TextView
                    android:id="@+id/adapter_category_top_name_tv"
                    style="@style/Common.App.ListView.Item.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="64.0sp" />

                <TextView
                    android:id="@+id/adapter_category_top_desc_tv"
                    style="@style/Common.App.ListView.Item.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_con_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="8.0dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:paddingTop="8.0dip"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/adapter_category_con_name_tv"
                    style="@style/Common.App.ListView.Item.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="64.0sp"
                    android:text="网络应用" />

                <TextView
                    android:id="@+id/adapter_category_con_desc_tv"
                    style="@style/Common.App.ListView.Item.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:text="QQ 飞信 MSM YY 聊天交友更贴心" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip" >

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0" >

                        <ImageView
                            android:id="@+id/adapter_category_con_1"
                            style="@style/Common.App.ListView.Item.Icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/imageview_content_description"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon"
                            android:visibility="visible" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0" >

                        <ImageView
                            android:id="@+id/adapter_category_con_2"
                            style="@style/Common.App.ListView.Item.Icon"
                            android:layout_width="48.0dip"
                            android:layout_height="48.0dip"
                            android:layout_marginLeft="5.0dip"
                            android:contentDescription="@string/imageview_content_description"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon"
                            android:visibility="visible" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0" >

                        <ImageView
                            android:id="@+id/adapter_category_con_3"
                            style="@style/Common.App.ListView.Item.Icon"
                            android:layout_width="48.0dip"
                            android:layout_height="48.0dip"
                            android:layout_marginLeft="5.0dip"
                            android:contentDescription="@string/imageview_content_description"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon"
                            android:visibility="visible" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0" >

                        <ImageView
                            android:id="@+id/adapter_category_con_4"
                            style="@style/Common.App.ListView.Item.Icon"
                            android:layout_width="48.0dip"
                            android:layout_height="48.0dip"
                            android:layout_marginLeft="5.0dip"
                            android:contentDescription="@string/imageview_content_description"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon"
                            android:visibility="visible" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0" >

                        <ImageView
                            android:id="@+id/adapter_category_con_5"
                            style="@style/Common.App.ListView.Item.Icon"
                            android:layout_width="48.0dip"
                            android:layout_height="48.0dip"
                            android:layout_marginLeft="5.0dip"
                            android:contentDescription="@string/imageview_content_description"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon"
                            android:visibility="visible" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/right_arraw_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/adapter_right_arrow_iv"
                        style="@style/Common.App.ListView.Item.RightArrow.IV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="5.0dip"
                        android:background="@drawable/right_arrow_selector"
                        android:contentDescription="@string/imageview_content_description" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>